<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/alarm_frequency_text"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/alarm_frequency"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:text="Sound the alarm every 2 minutes." />

    <SeekBar
        android:id="@+id/alarm_frequency"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:indeterminate="false"
        android:max="4"
        android:progress="1" />
    />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_x="0dp"
        android:layout_y="172dp"
        android:text="During the alarm say," />

    <CheckBox
        android:id="@+id/check_box_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_box_total_duration"
        android:layout_alignStart="@+id/check_box_total_duration"
        android:layout_below="@+id/textView"
        android:layout_x="80dp"
        android:layout_y="200dp"
        android:checked="true"
        android:text="Current Time" />

    <CheckBox
        android:id="@+id/check_box_total_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/check_box_current_time"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_x="80dp"
        android:layout_y="230dp"
        android:checked="true"
        android:text="Total Duration" />

</RelativeLayout>
